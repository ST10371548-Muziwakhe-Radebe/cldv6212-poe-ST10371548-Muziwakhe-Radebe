@model CloudRetailWebApp.Models.CustomerModel
@{
    ViewData["Title"] = "Delete Customer";
}
<h2>Delete Customer</h2>

<h4>Are you sure you want to delete this customer?</h4>
<div>
    <strong>@Model.FirstName @Model.LastName</strong> <br />
    Email: @Model.Email <br />
    Phone: @Model.Phone <br />
    Created: @Model.CreatedAt.ToLocalTime().ToString("g")
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
