@model CloudRetailWebApp.Models.OrderModel
@{
    ViewData["Title"] = "Place Order";
}
<h2>Place New Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Customer ID</label>
        <input asp-for="CustomerId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product ID</label>
        <input asp-for="ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Amount Per Item</label>
        <input asp-for="AmountPerItem" type="number" step="0.01" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Order</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
