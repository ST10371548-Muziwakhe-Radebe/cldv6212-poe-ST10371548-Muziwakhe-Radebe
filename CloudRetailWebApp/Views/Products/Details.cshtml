@model CloudRetailWebApp.Models.ProductModel
@{
    ViewData["Title"] = "Product Details";
}
<h2>Product Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageBlobPath))
            {
                <img src="@Model.ImageBlobPath" alt="Product image" width="120" />
            }
        </dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>
    </dl>
</div>
<p>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="@Model.RowKey" />
            <div class="mb-2">
                <label for="quantity">Quantity:</label>
                <input type="number" name="quantity" value="1" min="1" style="width: 80px;" class="form-control d-inline-block" />
            </div>
            <button type="submit" class="btn btn-success">Add to Cart</button>
        </form>
        <span> | </span>
    }
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-warning">Edit</a>
        <span> | </span>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
