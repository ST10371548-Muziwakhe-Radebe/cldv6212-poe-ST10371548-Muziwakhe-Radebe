@model IEnumerable<CloudRetailWebApp.Controllers.CartItemViewModel>

@{
    ViewData["Title"] = "Your Cart";
    var totalAmount = Model.Sum(item => item.ProductPrice * item.CartItem.Quantity);
}

<div class="row">
    <div class="col-md-12">
        <h2>Your Shopping Cart</h2>
        <hr />

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%;">Image</th>
                            <th style="width: 25%;">Product</th>
                            <th style="width: 15%;">Price</th>
                            <th style="width: 15%;">Quantity</th>
                            <th style="width: 15%;">Subtotal</th>
                            <th style="width: 15%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var subtotal = item.ProductPrice * item.CartItem.Quantity;
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.ProductName" class="img-thumbnail" style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                            <span class="text-muted">No Image</span>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                    @if (!string.IsNullOrEmpty(item.ProductDescription))
                                    {
                                        <br />
                                        <small class="text-muted">@(item.ProductDescription.Length > 50 ? item.ProductDescription.Substring(0, 50) + "..." : item.ProductDescription)</small>
                                    }
                                    <br />
                                    <small class="text-muted">Product ID: @item.ProductId</small>
                                </td>
                                <td class="align-middle">
                                    <strong>R @item.ProductPrice.ToString("F2")</strong>
                                </td>
                                <td class="align-middle">
                                    <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <div class="input-group" style="width: 120px;">
                                            <input type="hidden" name="cartItemId" value="@item.CartItem.CartItemId" />
                                            <input type="number" name="newQuantity" value="@item.CartItem.Quantity" min="1" class="form-control form-control-sm" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                        </div>
                                    </form>
                                </td>
                                <td class="align-middle">
                                    <strong>R @subtotal.ToString("F2")</strong>
                                </td>
                                <td class="align-middle">
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="cartItemId" value="@item.CartItem.CartItemId" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to remove this item from your cart?');">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end"><strong>Total Amount:</strong></td>
                            <td colspan="2"><strong class="text-primary" style="font-size: 1.2em;">R @totalAmount.ToString("F2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="mt-4 d-flex justify-content-between align-items-center">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
                <form asp-controller="Cart" asp-action="Checkout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Proceed to checkout?');">
                        <i class="bi bi-cart-check"></i> Proceed to Checkout
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <h4>Your cart is empty</h4>
                <p>Start adding products to your cart to see them here!</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit quantity update on change (optional enhancement)
        document.querySelectorAll('input[name="newQuantity"]').forEach(input => {
            input.addEventListener('change', function() {
                // Optional: Auto-update on blur
            });
        });
    </script>
}